def gv
pipeline {
    agent any
    parameters {
        booleanParam(name: "executeTests", defaultValue: true, description: "")
        choice(name: "VERSION", choices: ["1.1.1", "1.2.3"], description: "")
    }
    stages {
        stage ("init") {
            steps{
                script {
                    gv = load "script.groovey"
                }
                echo "buiding the application"
            }
        }
        stage("build") {

            steps {
               script {
                   gv.buildApp()
               }
            }
        }
        stage ("Test") { 
            when {
                expression {
                    params.executeTests
                }
            }
            steps{
                script {
                    gv.testApp()
                }
            }
        }
        stage("release") {

            steps {
                echo "This is the release stage"
                echo "this version ${params.VERSION}"
            }
        }
    }
}
