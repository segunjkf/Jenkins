pipeline {
    agent any
    parameters {
        booleanParam(name: "executeTests", defaultValue: true, description: "")
        choice(name: "VERSION", choices: ["1.1.1", "1.2.3"], defaultValue: true, description:)
    }
    stages {
        stage ("build") {
            steps{
                echo "buiding the application"
                echo "buiiding version ${NEW_VERSION}"
            }
        }
        stage ("Test") { 
            when {
                expression {
                    params.executeTests
                }
            }
            steps{
                echo "This is the deploy stage"
            }
        }
        stage("release") {

            steps {
                echo "This is the release stage"
                echo "this version ${VERSION}"
            }
        }
    }
}
